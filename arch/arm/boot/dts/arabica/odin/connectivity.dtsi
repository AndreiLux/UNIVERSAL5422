/* xmm7260 HSIC PM driver start */
	xmm7260-hsic{
		compatible = "imc,xmm7260-hsic";
		modem_pwr_down_gpio = <144>;	/* 112 + SMS_GPIO_32_EINT,	CP_RST_PWRDWN_N, AP to CP */
		pwr_on_gpio = <148>;			/* 112 + SMS_GPIO_36_EINT,	CP_PWR_ON, AP to CP */
		modem_reset_gpio = <156>;		/* 112 + SMS_GPIO_44_EINT,	AP_RESET_BB_N, AP to CP */
		slave_wakeup_gpio = <152>;		/* 112 + SMS_GPIO_40_EINT,	CP_SLAVE_WAKEUP, AP to CP */
		host_wakeup_gpio = <118>;		/* 112 + SMS_GPIO_6_EINT,	CP_HOST_WAKEUP, CP to AP */
		host_active_gpio = <157>;		/* 112 + SMS_GPIO_45_EINT,	CP_HOST_ACTIVE, AP to CP */
		rst_out_gpio = <145>;			/* 112 + SMS_GPIO_33_EINT,	CP_RST_OUT_N, CP to AP */
		core_dump_gpio = <119>;			/* 112 + SMS_GPIO_7_EINT,	CP_CORE_DUMP, CP to AP */
	};
