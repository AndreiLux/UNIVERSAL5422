/*
 * LG Electronics Odin
 */

/ {
    connectivity {
        compatible = "simple-bus";
  		interrupt-parent = <&gic>;
   	    #address-cells = <2>;
   	    #size-cells = <2>;
		ranges;
/* sdio start */
	sdhci@0x20006000{
		compatible = "odin,sdio";
		reg = <0 0x20006000 0 0x2000>;
		clocks = <&sdio_sclk0>;
		interrupts = <0 4 0x4>;	/* 36 - 32 */
		bus-width = <4>;
		sdio_port = <0x0>;
		sdclk = <200>;			/* 200Mhz, UHS104 */
		tuning_mode = <1>;		/* 0 : mode-1, 1 : mode-2, 2 : mode-3 */
		wifi;
		power_gpio = <146>;		/* 112 + SMS_GPIO_34_EINT */
		wakeup_gpio = <141>;	/* 112 + SMS_GPIO_29_EINT */
		cmd_timeout = <1>;
		keep-power-in-suspend;
		enable-sdio-wakeup;
		cap2-no-rescan-start;
		quirk-cap-clock-base-broken;
		quirk2-preset-value-broken;
		quirk2-host-off-card-on;
	};
/* sdio end */
/* sdio start */
	/*
	sdhci@0x20008000{
