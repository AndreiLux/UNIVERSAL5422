		quirk2-host-off-card-on;
	};
	*/
/* sdio end */
/* BCM4335 Wi-Fi Driver start */
	wlan@0{
		compatible = "odin,broadcom,bcm4335-wlan";
		/* GPIO # might have to be changed after mailbox interface is enabled by Jongmyung Park 20130531 */
		power_gpio = <146>;		/* 112 + SMS_GPIO_34_EINT */
		wakeup_gpio = <141>;	/* 112 + SMS_GPIO_29_EINT */
	};

/* BCM4335 Wi-Fi Driver end */

/* DWC HSUSB-HSIC driver start */
	hsusb_host{
		compatible = "odin_dwc_host";
		reg = <0 0x3F100000 0 0x400000>,
			<0 0x3FF00000 0 0x100>;
		interrupts = <0 76 0x4>;
		reset_offset = <0x9C>;
		reset_mask = <0x3C>;
		phy_rst_val = <0x30>;
		core_rst_val = <0x8>;
		bus_rst_val = <0x4>;
	};
/* DWC HSUSB-HSIC driver end */

/* woden-bluetooth driver start */
	bt@0{
		compatible ="odin,broadcom,bcm4335-bt";
		/* GPIO # might have to be changed after mailbox interface is enabled by Jongmyung Park 20130531 */
		reset_gpio = <124>;		/* 112 + SMS_GPIO_12 */
		wakeup_gpio = <140>;	/* 112 + SMS_GPIO_28_EINT */
	};
