menuconfig VIDEO_ODIN
	bool "Mtekvision ODIN platform CSS"
	depends on VIDEO_V4L2
	default y
	---help---
	  Say Y here to enable ODIN Camera Sub-System(CSS) Interface

config VIDEO_ISP_MISC_DRIVER
	depends on VIDEO_ODIN
	bool "support isp misc driver"
	default y
	---help---
	  Say Y here to use isp misc driver

